<div>
  <% book.post_comments.each do |post_comment| %>
    <%= link_to user_path(book.user.id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
    <% end %>
    <P><%= post_comment.user.name %></P>
    <P><%= post_comment.comment %></P>
    <% if post_comment.user == current_user %>
      <%= link_to book_post_comment_path(book.id, post_comment.id), method: :delete, "data-confirm" => "本当に消しますか？" do %>
        <button class="show-destroy-btn">Destroy</button>
      <% end %>
    <% end %>
  <% end %>
</div>

