<div class="validates-error">
<% if @user.errors.any? %>
  <%= @user.errors.count %> error prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 collg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form name">
          <label for="inputName">Name</label>
          <div class="formin">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
          </div>
        </div>
        <div class="form image">
          <label for="inputImage">Image</label>
          <div class="formin">
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
        </div>
        <div class="form intro">
          <label for="inputIntroduction">Introduction</label>
          <div class="formin">
            <%= f.text_area :introduction %>
          </div>
        </div>
        <div class="form submit">
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
