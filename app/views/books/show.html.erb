<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>User</td>
      <td><%= @book.title%></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book) %> </td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>