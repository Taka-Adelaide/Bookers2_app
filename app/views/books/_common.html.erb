<div class="container">
  <div class="row">
    
      <div class="User-info">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg" %>
        <table>
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <button class="edit-btn">
          <%= link_to edit_user_path(user.id) do %>
          <i class="fas fa-user-edit"></i>
          <% end %>
        </button>
      </div>

      <div class="new-book">
        <h2>New book</h2>
        <%= form_with model: book, local: true do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <P>Opinion</P>
          <%= f.text_area :body %>
          <%= f.submit "Create book" %>
        <% end %>
      </div>
    
  </div>


</div>
