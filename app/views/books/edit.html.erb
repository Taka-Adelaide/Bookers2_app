<div class="validates-error">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this obj from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>Editing Book</h1>
      <%= form_with model: @book, local: true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <P>Opinion</P>
      <%= f.text_area :body %>
      <%= f.submit "Update book" %>
      <% end %>
    </div>
  </div>
</div>